<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="test.ghostofart.example.com.mytest">
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/usiu_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
    <activity
            android:name=".Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TripData"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="test.ghostofart.example.com.mytest.TRIPDATA" />

            <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Pref"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="test.ghostofart.example.com.mytest.PREFS" />

            <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>